				CompCredibility,
				EBSICLProfiles,
				EBSPlotProbaProfiles,
				PriorDistrib,
				EBSPrior,
				EBSPriorProfiles
)

exportClasses(
							EBS,
							EBSProfiles
)

exportMethods(
							show,
							Length,
							getModel,
							getData,
							getKmax,
							getHyperParameters,
							getVariance,
							getOverdispersion,
							getPriorm,
