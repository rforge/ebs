							Li,
							Col,
							matProba,
							getLength,
							Model,
							Data,
							Kmax,
							HyperParameters,
							Variance,
							Overdispersion,
							getLi,
							getCol,
							getP,
							NbConditions
)


S3method(CompCredibility, default) 
